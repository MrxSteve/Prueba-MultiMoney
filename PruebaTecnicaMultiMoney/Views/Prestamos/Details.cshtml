@model PruebaTecnicaMultiMoney.Models.Prestamo

@{
    ViewData["Title"] = "Detalle del Préstamo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-check-circle me-2"></i>Préstamo Aprobado
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-info-circle me-2"></i>Resumen del Préstamo #@Model.Id
                        </h5>
                        <p class="mb-0">Su préstamo ha sido procesado exitosamente. A continuación encontrará el detalle completo.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card border-primary mb-3">
                                <div class="card-header bg-primary text-white">
                                    <strong><i class="bi bi-cash-stack me-2"></i>Información General</strong>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm mb-0">
                                        <tbody>
                                            <tr>
                                                <th scope="row">Monto Solicitado:</th>
                                                <td class="text-end fw-bold">@Model.Monto.ToString("C2")</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Plazo:</th>
                                                <td class="text-end fw-bold">@Model.PlazoMeses meses</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Tasa Mensual:</th>
                                                <td class="text-end fw-bold">@Model.TasaMensual.ToString("N2")%</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Fecha de Creación:</th>
                                                <td class="text-end fw-bold">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-warning mb-3">
                                <div class="card-header bg-warning">
                                    <strong><i class="bi bi-calculator me-2"></i>Cálculos</strong>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm mb-0">
                                        <tbody>
                                            <tr>
                                                <th scope="row">Comisión (5%):</th>
                                                <td class="text-end fw-bold text-danger">@Model.Comision.ToString("C2")</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Cuota Mensual:</th>
                                                <td class="text-end fw-bold text-success fs-5">@Model.CuotaMensual.ToString("C2")</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Total a Pagar:</th>
                                                <td class="text-end fw-bold">@((Model.CuotaMensual * Model.PlazoMeses).ToString("C2"))</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Total Intereses:</th>
                                                <td class="text-end fw-bold">@((Model.CuotaMensual * Model.PlazoMeses - Model.Monto).ToString("C2"))</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <h4 class="mb-3">
                        <i class="bi bi-table me-2"></i>Cronograma de Pagos
                    </h4>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-end">Cuota Fija</th>
                                    <th class="text-end">Capital</th>
                                    <th class="text-end">Interés</th>
                                    <th class="text-end">Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cuota in Model.Cuotas.OrderBy(c => c.NumeroCuota))
                                {
                                    <tr>
                                        <td class="text-center fw-bold">@cuota.NumeroCuota</td>
                                        <td class="text-end">@cuota.CuotaFija.ToString("C2")</td>
                                        <td class="text-end text-success">@cuota.Capital.ToString("C2")</td>
                                        <td class="text-end text-danger">@cuota.Interes.ToString("C2")</td>
                                        <td class="text-end fw-bold">@cuota.SaldoPendiente.ToString("C2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr class="fw-bold">
                                    <td class="text-center">TOTALES</td>
                                    <td class="text-end">@((Model.CuotaMensual * Model.PlazoMeses).ToString("C2"))</td>
                                    <td class="text-end text-success">@Model.Cuotas.Sum(c => c.Capital).ToString("C2")</td>
                                    <td class="text-end text-danger">@Model.Cuotas.Sum(c => c.Interes).ToString("C2")</td>
                                    <td class="text-end">$0.00</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Nuevo Préstamo
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-list me-2"></i>Ver Todos los Préstamos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
