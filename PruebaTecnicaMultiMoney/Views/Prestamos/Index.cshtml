@model IEnumerable<PruebaTecnicaMultiMoney.Models.Prestamo>

@{
    ViewData["Title"] = "Mis Préstamos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>Mis Préstamos
                    </h2>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="bi bi-plus-circle me-2"></i>Nuevo Préstamo
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th>Fecha</th>
                                        <th class="text-end">Monto</th>
                                        <th class="text-center">Plazo</th>
                                        <th class="text-end">Cuota Mensual</th>
                                        <th class="text-end">Comisión</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">@item.Id</td>
                                            <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end fw-bold">@item.Monto.ToString("C2")</td>
                                            <td class="text-center">@item.PlazoMeses meses</td>
                                            <td class="text-end text-success fw-bold">@item.CuotaMensual.ToString("C2")</td>
                                            <td class="text-end text-danger">@item.Comision.ToString("C2")</td>
                                            <td class="text-center">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                                    <i class="bi bi-eye me-1"></i>Ver Detalle
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            <h5 class="alert-heading">
                                <i class="bi bi-inbox me-2"></i>No hay préstamos registrados
                            </h5>
                            <p class="mb-0">¡Comience solicitando su primer préstamo!</p>
                            <hr />
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Solicitar Préstamo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
